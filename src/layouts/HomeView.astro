import SocialIcons from '../components/SocialMediaIcons.astro';
---
<style> 

body {
    /*max-width: 679px;*/
    background-color: #FBFBFB;
}

h1 {
    font-family: 'Inter Var';
    font-size: 32px;
    font-weight: bold;
    color: #5B483E;
    margin-block: 0;
}
p {
    font-family: 'Inter Var';
    font-size: 14px;
    color: #515155;
}
span {
    font-family: 'Inter Var';
    font-size: 14px;
    color: #515155;

}

/************************

        SideBar Styling

*************************/

.theHeader{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    align-self: stretch;
}

.socialIcon {
    text-decoration: none;
}

.casestudyContainer{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
}
.indexHeroMessage {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.casestudyList{
    display: flex;
    flex-direction: column;
    
}

.indexContainer{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 4rem;
}

.casestudyItem{
    display: grid;
    grid-template-columns: 2.5fr 5.5fr 2fr;
    gap: 10px;
    padding-block: 4px;
}

span.casestudyDate{
    text-align: right;
}

.deselected span{ /*use this for hover effect*/
    color:#C0B5AF;
}

/**********************************

            Media Queries

**********************************/



</style>


